---
const { title } = Astro.props;

import SideNav from "../components/SideNav.astro";
import RenderCount from "../components/RenderCount.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>

	<body>
		<SideNav />
		<main>
			<slot />
			<RenderCount />
		</main>
	</body>
</html>

<style is:global>
	html,
	body {
		height: 100%;
	}

	body {
		margin: 0;
		display: grid;
		grid-template-columns: auto 1fr;
		font-family: Verdana, Geneva, Tahoma, sans-serif;
		background: black;
		color: white;
		color-scheme: dark;
	}

	@media (width < 600px) {
		body {
			grid-template: auto 1fr / 1fr;
		}
	}

	main {
		width: 100%;
		height: 100%;
		display: grid;
		place-items: center;
		position: relative;
	}

	canvas {
		display: block;
		width: min(80%, 700px);
		max-width: 90svmin;
		aspect-ratio: 1;
		border: 2px solid rgba(255 255 255 / 0.2);
		border-radius: 16px;
	}
</style>
