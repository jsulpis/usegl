---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/simple-webgl-library/favicon.svg"
		/>
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>

	<body>
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		height: 100%;
	}
	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		font-family: Verdana, Geneva, Tahoma, sans-serif;
		justify-content: center;
		align-items: center;
		color: white;
		background: black;
	}
	h1 {
		margin-top: 0;
	}
	canvas {
		display: block;
		width: 80dvmin;
		height: 80dvmin;
		border: 2px solid rgba(255 255 255 / 0.2);
		border-radius: 16px;
	}
</style>
